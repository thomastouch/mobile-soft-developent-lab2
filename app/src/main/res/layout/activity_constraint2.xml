<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Space Stations"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Flights"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rovers"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 中间区域（左右面板 + 箭头） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle_area"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 左侧面板（DCA） -->
        <TextView
            android:id="@+id/left_panel"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#2e7d32"
            android:gravity="center"
            android:text="DCA"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 中间箭头 -->
        <ImageView
            android:id="@+id/arrow_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/double_arrows"
            app:layout_constraintStart_toEndOf="@id/left_panel"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 右侧面板（MARS） -->
        <TextView
            android:id="@+id/right_panel"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#2e7d32"
            android:gravity="center"
            android:text="MARS"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/arrow_view"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 单选按钮组（One Way / Round Trip） -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/middle_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_one_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            android:checked="true"
            android:buttonTint="#ff9800"
            android:textColor="#333333"/>

        <RadioButton
            android:id="@+id/radio_round_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round Trip"
            android:buttonTint="#ff9800"
            android:textColor="#333333"/>
    </RadioGroup>

    <!-- 旅客数量选择 -->
    <TextView
        android:id="@+id/traveller_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:textColor="#ff9800"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/rocet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintTop_toBottomOf="@id/traveller_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- 太阳系示意图 -->
    <ImageView
        android:id="@+id/solar_system"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/galaxy"
        app:layout_constraintTop_toBottomOf="@id/traveller_count"
        app:layout_constraintStart_toStartOf="@id/rocet"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- 底部 DEPART 按钮 -->
    <Button
        android:id="@+id/depart_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DEPART"
        android:background="#4caf50"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
